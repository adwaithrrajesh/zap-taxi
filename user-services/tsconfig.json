{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "src",
      "paths": {
        "@infrastructure/*": ["infrastructure/*"],
        "@presentation/*": ["presentation/*"],
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }